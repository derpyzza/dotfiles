format-prefix = "ﱘ  "
format = <label>
format-foreground = ${colors.white-dark}
format-background = ${colors.background}
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh

[module/disk]
type = internal/fs

mount-0 = /

