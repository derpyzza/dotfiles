; tray-position = right
; tray-detached = false
; tray-maxsize = 16
; tray-background = ${colors.background}
; tray-offset-x = 0
;tray-offset-y = 0
;tray-padding = 2
;tray-scale = 1.0

; Via: https://github.com/PrayagS/polybar-spotify
[module/spotify]
