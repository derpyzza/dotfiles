primary         = #FFFFFF
accent 					= #B08769

[global/wm]
include-file = ~/.config/polybar/glyphs.ini

[bar/bar]
monitor = ${env:MONITOR:HDMI-1}
monitor-fallback = ${env:MONITOR:eDP-1}
