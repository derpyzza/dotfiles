/**
 * rofi -dump-theme output.
 * Rofi version: 1.7.2
 **/

configuration {
font: "UbuntuMono Nerd Font 14";
modi: "power:~/.config/rofi/powermenu.sh,combi,window";
//location : 0;
	fixed-num-lines: true;
	show-icons: false;
	combi-modi: "drun,filebrowser,run";
	window-format : "[{w}] {t}";
	drun-display-format  : " {name}  [<span foreground="#B08769"weight='light' size='small'>({generic})</span>]" ;
	sidebar-mode  : true ;
	click-to-exit : true ;
	show-icons    : false ;
	matching      : "fuzzy" ;
	monitor				: "-4"	;
	combi-hide-mode-prefix : true;
	display-run: "" ;
	display-window :" " ;
/*	display-ssh: ;*/
	display-drun:  " " ;
	display-power: "⏻ " ;
	display-combi: " " ;
/*	display-keys: ;*/
	display-filebrowser: "" ;
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

* {
    background                 :  #101010aa ;
    alt-background             :  #202020 ;
    alt 		       		   			 :  #5D5E61 ;
    red                        :  #F33B48 ;
    green                      :  #58F667 ;
    background-color           :  transparent ;
    blue                       :  #5799F7 ;
    foreground                 :  rgba ( 248, 248, 242, 100 % ) ;
}

window {
		transparency		: "full";
    padding					: 5 3 0;
    background-color: var(background);
    border					: 2;
		location 				: center;
    border-radius   : 10;
    border-color    : var(alt-background);
    height          : 50% ; // 98
    width           : 30% ;
		//y-offset				: 15;
		//x-offset				: -4;
}
mainbox {
    padding: 10;
    border:  0;
}
textbox {
    text-color: var(foreground);
		blink: false;
}
listview {
    padding:      5 10 5 ;
    scrollbar:    true;
    spacing:      8px ;
    fixed-height: 10px;
}
element {
    padding: 12px 15px;
    border-radius: 10px;
}
element normal {
    //background-color: var(background);
    text-color:       var(foreground);
}

element selected
{
    background-color: #444;
		border: 0 0 2 0;
		border-color:	#B08769;
    text-color:       var(foreground);
}

element-text {
    background-color: inherit;
    text-color:       inherit;
}

button {
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    //background-color:               var(background);
    margin: 						0 5 0;
    padding: 						5;
    text-color: 					var(alt);
}

button selected {
    border-radius : 4;
    background-color: #FFFa;
    text-color:       var(alt-background);
}
inputbar {
    padding:    10px;
    //background-color: var(background);
    spacing:    10;
    border-radius : 10px;
    text-color: var(red);
    children:   [ prompt,entry];
}

entry {
    spacing:    0;
    text-color: var(foreground);
		placeholder: "Search...";
		placeholder-color : var(foreground);
		expand: true;
}

prompt {
    spacing:    0;
    text-color: var(alt);
}


